<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<style name="Theme.Splash" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/bg_launcher</item>

</style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="chart_style">
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="chart_setbtn_style">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="btn_navigation_style">
        <item name="android:layout_height">@dimen/titlebar_custom_height</item>
        <item name="android:layout_width">@dimen/titlebar_custom_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_wifi_new">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff303030</item>
    </style>

    <style name="icon_option_item">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_title_options_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="split_options_item">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#757575</item>

    </style>
    <style name="icon_contact_us_item">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_title_contact_us_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="text_content_contact_us_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="icon_workorder_item">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_title_workorder_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="text_input_workorder_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>
    </style>
    <style name="img_workorder_quickselect_item">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
